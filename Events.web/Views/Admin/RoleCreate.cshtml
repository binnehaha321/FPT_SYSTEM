@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create";
}

<h2>Create Role</h2>

<style type="text/css">
    #tborle, .c {
        border: double;
    }
</style>

@using (Html.BeginForm())
{
    <table id="tborle">
        <tr>
            <td class="c" style="width: 120px; text-align: center; border: 1px solid">Input a new role:</td>
            <td class="c">
                @Html.EditorFor(m => m.Name)
            </td>
        </tr>
    </table>
    <input type="submit" value="Create" class="btn-success" style="margin-top: 12px; border: none; width: 100px; height: 28px"/>
}